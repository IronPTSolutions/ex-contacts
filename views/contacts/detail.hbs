
<div class="row">
    <div class="col-12">
        <div class="d-flex">
            <h5 class="me-2">{{ contact.name }}</h5>
            <a class="me-2" href="/contacts/{{contact.id}}/edit"><i class="fa fa-edit"></i></a>
            <form action="/contacts/{{contact.id}}/delete" method="POST">
                <button type="submit" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></button>
            </form>
        </div>
        <small><i class="fa fa-envelope"></i> {{ contact.email }}</small>
        <small><i class="fa fa-phone"></i> {{ contact.phone }}</small>
    </div>

    <div class="col-12 mt-3">
        <h4>Timeline</h2>

        <div class="row">
            <div class="col-12 col-md-4">
                <form class="mt-1" action="/contacts/{{ contact.id }}/events" method="post">
                
                    <div class="input-group mb-1">
                        <span class="input-group-text"><i class="fa fa-tag fa-fw"></i></span>
                        
                        <input type="text" name="title" value="{{ event.title }}" class="form-control {{#if errors.title }}is-invalid{{/if}}" placeholder="Event title...">
                        <div class="invalid-feedback">{{ errors.title }}</div>
                    </div>
                
                    <div class="input-group mb-1">
                        <span class="input-group-text"><i class="fa fa-picture-o fa-fw"></i></span>
                        <input type="text" name="image" value="{{ event.image }}" class="form-control {{#if errors.image }}is-invalid{{/if}}" placeholder="Event image url...">
                        <div class="invalid-feedback">{{ errors.image }}</div>
                    </div>
                
                    <div class="input-group mb-2">
                        <span class="input-group-text"><i class="fa fa-edit fa-fw"></i></span>
                        <textarea class="form-control {{#if errors.description }}is-invalid{{/if}}" name="description" aria-label="Event description...">{{ event.description }}</textarea>
                        <div class="invalid-feedback">{{ errors.description }}</div>
                    </div>
                
                    <button type="submit" class="btn btn-primary">Add Event</button>
                </form>
            </div>
        </div>

        <div class="row row-columns-4">
            {{#each events as |event|}}
                <div class="col">
                    <div class="card">
                        <img src="{{ event.image }}" class="card-img-top" alt="{{ event.title }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ event.title }}</h5>
                            <p class="card-text">{{ event.description }}</p>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>

