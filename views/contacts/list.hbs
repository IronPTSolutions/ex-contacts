<div class="row justify-content-center">
  <div class="col-12 col-md-8">

    <form action="/contacts" method="get">
      <div class="input-group mb-3">
        <span class="input-group-text"><i class="fa fa-search"></i></span>
        <input type="text" name="search" value="{{ search }}" class="form-control" placeholder="Search by contact name..">
        <button class="btn btn-outline-secondary" type="submit"><i class="fa fa-search"></i></button>
      </div>
    </form>

    <div class="list-group">
      {{#each contacts as |contact|}}
        <div class="list-group-item">
          <div class="d-flex flex-column">
            <a href="/contacts/{{ contact.id }}" class="stretched-link"><h6>{{ contact.name }}</h6></a>
            <div class="d-flex text-secondary">
              <small><i class="fa fa-envelope me-1"></i>{{ contact.email }}</small>
              <small><i class="fa fa-phone mx-1"></i>{{ contact.phone }}</small>
            </div>
            <div class="text-secondary">
              <small>Author: {{contact.author.name}}</small>
            </div>
          </div>
        </div>
      {{/each}}
    </div>

  </div>
</div>