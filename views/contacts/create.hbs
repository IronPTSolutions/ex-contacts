<div class="row justify-content-center">
  <div class="col-12 col-md-6">
    <form action="/create-contact" method="post">
    
      <div class="input-group mb-1">
        <span class="input-group-text"><i class="fa fa-user fa-fw"></i></span>
        <input type="text" name="name" class="form-control" placeholder="Contact name...">
      </div>
    
      <div class="input-group mb-1">
        <span class="input-group-text"><i class="fa fa-envelope fa-fw"></i></span>
        <input type="text" name="email" class="form-control" placeholder="name@example.org">
      </div>
    
      <div class="input-group mb-2">
        <span class="input-group-text"><i class="fa fa-phone fa-fw"></i></span>
        <input type="text" name="phone" class="form-control" placeholder="+1 (913) 497-2020">
      </div>
    
      <div class="d-grid">
        <button class="btn btn-primary" type="submit">Create Contact</button>
      </div>
    </form>
  </div>
</div>
